<style>
  .pagination {
    padding: 0.3em;
    margin: 0.3em;
    font: 13.34px helvetica,arial,freesans,clean,sans-serif;
  }
  .pagination a {
    padding: 0.1em 0.3em;
    margin: 0.2em;
    border: 1px solid #aad;
    text-decoration: none;
    color: #369;
  }
  .pagination a:active,
  .pagination a:hover {
    border: 1px solid #369;
    color: #000;
  }
  .pagination span.current {
    padding: 0.1em 0.3em;
    margin: 0.2em;
    border: 1px solid #369;
    font-weight: bold;
    background-color: #369;
    color: #FFF;
  }
  .pagination span.disabled {
    padding: 0.1em 0.3em;
    margin: 0.2em;
    border: 1px solid #eee;
    color: #ddd;
  }
</style>
<%= paginator.render do -%>
<div class="pagination"><%= prev_page_tag -%><%= next_page_tag -%></div>
<% end -%>
